<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/poster"
    android:padding="8dp">


        <ImageView
            android:id="@+id/poster_image"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:src="@color/purple"/>

        <TextView
            android:id="@+id/poster_title"
            android:layout_toRightOf="@+id/poster_image"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="title"
            android:textStyle="bold"
            android:textSize="25dp"/>

        <TextView
            android:id="@+id/poster_date"
            android:layout_toRightOf="@+id/poster_image"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/poster_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2024.01.01~2024.02.01"
            android:textSize="15dp"/>

    <TextView
        android:id="@+id/poster_location"
        android:layout_toRightOf="@+id/poster_image"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/poster_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="고척 스카이돔"
        android:textSize="15dp"/>


</RelativeLayout>